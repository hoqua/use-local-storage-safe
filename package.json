{
  "version": "0.2.4",
  "license": "MIT",
  "name": "use-local-storage-safe",
  "description": "React hook for using LocalStorage safely",
  "repository": "https://github.com/hoqua/use-local-storage-safe",
  "homepage": "https://github.com/hoqua/use-local-storage-safe",
  "author": {
    "name": "Dmitrii Zolotuhin",
    "email": "dmitrii.zolotukhin@gmail.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "pre-commit": [
    "build",
    "lint:fix"
  ],
  "scripts": {
    "build": "tsup src/index.ts --minify",
    "release": "pnpm run build && changeset publish",
    "lint": "tsc && eslint --ext=.ts,.tsx ./",
    "lint:fix": "pnpm run lint --fix",
    "test": "jest",
    "test:badges": "npm test  && jest-coverage-badges"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.mjs",
    "dist/index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest": "^29.5.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.5.0",
    "pre-commit": "^1.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "keywords": [
    "react",
    "hook",
    "localStorage",
    "persistent",
    "state",
    "useState",
    "hooks",
    "local storage",
    "store"
  ]
}
